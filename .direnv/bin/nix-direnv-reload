#!/usr/bin/env bash
set -e
if [[ ! -d "/media/backup_drive/Dev/godot/godot-shell" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/media/backup_drive/Dev/godot/godot-shell")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/media/backup_drive/Dev/godot/godot-shell" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/media/backup_drive/Dev/godot/godot-shell/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/media/backup_drive/Dev/godot/godot-shell/.envrc" "/media/backup_drive/Dev/godot/godot-shell/.direnv"/*.rc
